{
  "name": "@signalk/server-api",
  "version": "1.39.0",
  "description": "signalk-server Typescript API for plugins etc with relevant implementation classes",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build:apiclients": "openapi --input ../../src/api/course/openApi.json --output src/course-api-generated --client node",
    "build": "tsc --declaration",
    "watch": "tsc --declaration --watch",
    "prepublishOnly": "npm run build:apiclients && npm run build",
    "test": "mocha --require ts-node/register src/**/*.test.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SignalK/signalk-server.git"
  },
  "author": "teppo.kurki@iki.fi",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/express": "^4.17.1",
    "@types/mocha": "^8.2.0",
    "chai": "^4.3.0",
    "express": "^4.10.4",
    "mocha": "^8.3.0",
    "openapi-typescript-codegen": "^0.20.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.6.2"
  },
  "peerDependencies": {
    "baconjs": "^1.0.1"
  },
  "dependencies": {
    "node-fetch": "^2.6.7"
  }
}
